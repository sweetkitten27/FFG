<tools>
	<tool displayName="Paintbrush" 
		handle="PaintbrushTool"
		classHandle="com.nickjr.app.creativity_center.view.tool.PaintbrushTool"
		patternHandle="brushes/paintbrush.swf" 
		stylusHandle="stylus/brush.swf"
		iconHandle="ui/icon_paintbrush.swf" 
		rotationType="random"
		overLap="0.7" 
	/>
	<tool displayName="Crayon" handle="CrayonTool"
		classHandle="com.nickjr.app.creativity_center.view.tool.CrayonTool"
		patternHandle="brushes/crayon.swf" 
		stylusHandle="stylus/crayon.swf"
		iconHandle="ui/icon_crayon.swf" 
		rotationType="random" 
		overLap="0.7" 
	/>
	<tool displayName="Spray Paint" 
		handle="SprayPaintTool"
		classHandle="com.nickjr.app.creativity_center.view.tool.SprayPaintTool"
		patternHandle="brushes/spraypaint.swf"
		stylusHandle="stylus/spraypaint.swf"
		iconHandle="ui/icon_spraypaint.swf"
		animations="animations/spraypaint.swf" 
	/>
	<tool displayName="Marker" 
		handle="MarkerTool"
		classHandle="com.nickjr.app.creativity_center.view.tool.MarkerTool"
		patternHandle="brushes/marker.swf"
		stylusHandle="stylus/marker.swf"
		iconHandle="ui/icon_marker.swf" 
		rotationType="spin" 
		overLap="0.1" 
	/>
	<tool displayName="Text" 
		handle="TextTool"
		classHandle="com.nickjr.app.creativity_center.view.tool.TextTool"
		patternHandle="brushes/eraser.swf"
		stylusHandle="stylus/text.swf"		
		iconHandle="ui/icon_text.swf"
		rotateStylus="false" 		
	/>
	<tool displayName="Eraser"
		handle="EraserTool"
		classHandle="com.nickjr.app.creativity_center.view.tool.EraserTool"
		patternHandle="brushes/eraser.swf" 
		stylusHandle="stylus/eraser.swf"
		size_stylus="false" 
		iconHandle="ui/icon_eraser.swf"
	/>	
	<tool displayName="Pen" handle="PenTool"
		classHandle="com.nickjr.app.creativity_center.view.tool.RibbonTool"
		patternHandle="brushes/pen.swf"
		stylusHandle="stylus/pen.swf"
		iconHandle="ui/icon_pen.swf" 
		overLap="0.1"
	/>
	<tool displayName="Sparkle" 
		handle="SparkleTool" 
		classHandle="com.nickjr.app.creativity_center.view.tool.SparkleTool"
		stylusHandle="stylus/sparkle.swf" 
		iconHandle="ui/icon_sparkles.swf"
		animations="animations/sparkles.swf"
	/>	
	<tool displayName="Goo" 
		handle="GooTool" 
		classHandle="com.nickjr.app.creativity_center.view.tool.GooTool"
		stylusHandle="stylus/goo.swf"
		iconHandle="ui/icon_goo.swf"
		gooEase="Bounce"
		gooDuration="500"
	/>	
	<tool displayName="Sprinkle" 
		handle="SprinkleTool" 
		classHandle="com.nickjr.app.creativity_center.view.tool.SprinkleTool"
		stylusHandle="stylus/sprinkle.swf" 
		iconHandle="ui/icon_sprinkles.swf"
		animations="animations/sprinkles.swf"
	/>
	<tool displayName="Watercolor" 
		handle="Watercolor"
		classHandle="com.nickjr.app.creativity_center.view.tool.WatercolorTool"
		patternHandle="brushes/watercolor.swf"
		stylusHandle="stylus/watercolor.swf" 
		iconHandle="ui/icon_watercolor.swf"
		layerAlpha = "0.60"
		overLap="0.75" 
	/>
	<tool displayName="Splatter" 
		handle="SplatterTool"
		classHandle="com.nickjr.app.creativity_center.view.tool.SplatterTool"
		stylusHandle="stylus/splatter.swf" 
		iconHandle="ui/icon_splatter.swf"
	/>

</tools>